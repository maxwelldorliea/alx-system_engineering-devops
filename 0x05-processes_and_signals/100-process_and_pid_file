#!/usr/bin/env bash
trap 'catch_term' SIGTERM

catch_term() {
	echo "I hate the kill command"
	sudo rm -f /var/run/myscript.pid
	exit
}

trap 'catch_int' SIGINT

catch_int() {
	echo "Y U no love me?!"
}

trap 'catch_quit' SIGQUIT

catch_quit() {
	sudo rm -f /var/run/myscript.pid
	exit
}


sudo bash -c "echo $$ > /var/run/myscript.pid"

while true; do
	echo "To infinity and beyond"
	sleep 2
done
